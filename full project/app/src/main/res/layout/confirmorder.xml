<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context=".confirmorder"
android:orientation="vertical"
    android:background="#303030">


<TextView
    android:id="@+id/textView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Order confirmed"
    android:gravity="center"
    android:textSize="60dp"
    android:layout_marginTop="20dp"
    android:fontFamily="@font/lily_script_one"
    android:textColor="@color/brown_shade"
    android:layout_marginBottom="40dp"/>

<ImageView
    android:id="@+id/imageView"
    android:layout_width="match_parent"
    android:layout_height="214dp"
    app:srcCompat="@drawable/correct"
    android:layout_marginBottom="40dp"/>

<TextView
    android:id="@+id/textView2"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Order ID : 93246 "
    android:textSize="25dp"
    android:textColor="@color/white"
    android:fontFamily="@font/caladea"
    android:gravity="center"
    android:layout_marginBottom="40dp"
    />

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center">

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="HOME"
        android:textColor="@color/white"
        android:background="@drawable/button_select1"
        android:layout_marginRight="80dp"/>

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:background="@drawable/button_select1"
        android:text="EXIT" />

</LinearLayout>

</LinearLayout>