<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/page"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".IceCoffeeFragment">

    <ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/horizontalScrollView"
    android:layout_marginTop="180dp"
    android:padding="30dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:showDividers="middle"
            android:dividerPadding="16dp">


            <android.support.constraint.ConstraintLayout
                android:id="@+id/firstproduct"
                android:layout_width="160dp"
                android:layout_height="240dp"
                android:layout_marginLeft="5dp"
                android:layout_marginEnd="30dp"
                android:background="@drawable/round_square"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.083"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/horizontalScrollView"
                app:layout_constraintVertical_bias="0.072">

                <ImageView
                    android:id="@+id/image1"
                    android:layout_width="149dp"
                    android:layout_height="147dp"
                    android:layout_marginTop="5dp"
                    android:adjustViewBounds="true"
                    android:background="@drawable/image_border"
                    android:clipToOutline="true"
                    android:scaleType="centerCrop"
                    android:src="@drawable/classic_iced_americano"
                    app:layout_constraintBottom_toTopOf="@+id/name1"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.545"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/name1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/caladea"
                    android:gravity="center"
                    android:text="Classic Iced Americano"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp"
                    app:layout_constraintTop_toBottomOf="@id/image1"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />

                <!-- Rating and Time -->
                <TextView
                    android:id="@+id/ratingTime1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="⭐ 4.5    4-5 mins"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp"
                    app:layout_constraintTop_toBottomOf="@id/name1"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />

            </android.support.constraint.ConstraintLayout>


            <android.support.constraint.ConstraintLayout
                android:id="@+id/secondproduct"
                android:layout_width="160dp"
                android:layout_height="240dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/round_square"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.943"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/horizontalScrollView"
                app:layout_constraintVertical_bias="0.073">

                <!-- Updated ImageView -->

                <!-- Product Name -->
                <ImageView
                    android:id="@+id/image2"
                    android:layout_width="149dp"
                    android:layout_height="147dp"
                    android:layout_marginTop="5dp"
                    android:adjustViewBounds="true"
                    android:background="@drawable/image_border"
                    android:clipToOutline="true"
                    android:scaleType="centerCrop"
                    android:src="@drawable/icedlatte"
                    app:layout_constraintBottom_toTopOf="@+id/name2"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.545"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/name2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/caladea"
                    android:gravity="center"
                    android:text="Iced Latte"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/image2" />


                <!-- Rating and Time -->
                <TextView
                    android:id="@+id/ratingTime2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="⭐ 4.7    5-6 mins"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/name2" />

            </android.support.constraint.ConstraintLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:showDividers="middle"
            android:dividerPadding="16dp">
            <android.support.constraint.ConstraintLayout
                android:id="@+id/thirdproduct"
                android:layout_width="160dp"
                android:layout_height="240dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="30dp"
                android:background="@drawable/round_square"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.083"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/firstproduct"
                app:layout_constraintVertical_bias="0.072">

                <!-- Updated ImageView -->
                <ImageView
                    android:id="@+id/image3"
                    android:layout_width="149dp"
                    android:layout_height="147dp"
                    android:layout_marginTop="5dp"
                    android:src="@drawable/icedmocha"
                    android:scaleType="centerCrop"
                    android:clipToOutline="true"
                    android:adjustViewBounds="true"
                    android:background="@drawable/image_border"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toTopOf="@+id/name3"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />

                <!-- Product Name -->
                <TextView
                    android:id="@+id/name3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/caladea"
                    android:gravity="center"
                    android:text="Iced Mocha"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp"
                    app:layout_constraintTop_toBottomOf="@id/image3"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />


                <!-- Rating and Time -->
                <TextView
                    android:id="@+id/ratingTime3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="⭐ 4.3    6-7 mins"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp"
                    app:layout_constraintTop_toBottomOf="@id/name3"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />

            </android.support.constraint.ConstraintLayout>

            <android.support.constraint.ConstraintLayout
                android:id="@+id/fourthproduct"
                android:layout_width="160dp"
                android:layout_height="240dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/round_square"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.943"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/secondproduct"
                app:layout_constraintVertical_bias="0.073">

                <!-- Updated ImageView -->
                <ImageView
                    android:id="@+id/image4"
                    android:layout_width="149dp"
                    android:layout_height="147dp"
                    android:layout_marginTop="5dp"
                    android:adjustViewBounds="true"
                    android:background="@drawable/image_border"
                    android:scaleType="centerCrop"
                    android:clipToOutline="true"
                    android:src="@drawable/affogato"
                    app:layout_constraintBottom_toTopOf="@+id/name4"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <!-- Product Name -->
                <TextView
                    android:id="@+id/name4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/caladea"
                    android:gravity="center"
                    android:text="Affogato"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/image4" />


                <!-- Rating and Time -->
                <TextView
                    android:id="@+id/ratingTime4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="⭐ 4.2    5 mins"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/name4" />

            </android.support.constraint.ConstraintLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:showDividers="middle"
            android:dividerPadding="16dp">
            <android.support.constraint.ConstraintLayout
                android:id="@+id/fifthproduct"
                android:layout_width="160dp"
                android:layout_height="260dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="30dp"
                android:background="@drawable/round_square"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.083"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/thirdproduct"
                app:layout_constraintVertical_bias="0.072">

                <!-- Updated ImageView -->
                <ImageView
                    android:id="@+id/image5"
                    android:layout_width="149dp"
                    android:layout_height="147dp"
                    android:layout_marginTop="5dp"
                    android:src="@drawable/iced_caramel_macchiato"
                    android:scaleType="centerCrop"
                    android:clipToOutline="true"
                    android:adjustViewBounds="true"
                    android:background="@drawable/image_border"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toTopOf="@+id/name5"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />

                <!-- Product Name -->
                <TextView
                    android:id="@+id/name5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/caladea"
                    android:gravity="center"
                    android:text="Iced Caramel Macchiato"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp"
                    app:layout_constraintTop_toBottomOf="@id/image5"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />


                <!-- Rating and Time -->
                <TextView
                    android:id="@+id/ratingTime5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="⭐ 4.6    6-7 mins"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp"
                    app:layout_constraintTop_toBottomOf="@id/name5"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />

            </android.support.constraint.ConstraintLayout>

            <android.support.constraint.ConstraintLayout
                android:id="@+id/sixthproduct"
                android:layout_width="160dp"
                android:layout_height="240dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="30dp"
                android:background="@drawable/round_square"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.083"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/thirdproduct"
                app:layout_constraintVertical_bias="0.072">

                <!-- Updated ImageView -->
                <ImageView
                    android:id="@+id/image6"
                    android:layout_width="149dp"
                    android:layout_height="147dp"
                    android:layout_marginTop="5dp"
                    android:src="@drawable/iced_coconut_coffee"
                    android:scaleType="centerCrop"
                    android:clipToOutline="true"
                    android:adjustViewBounds="true"
                    android:background="@drawable/image_border"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toTopOf="@+id/name6"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />

                <!-- Product Name -->
                <TextView
                    android:id="@+id/name6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/caladea"
                    android:gravity="center"
                    android:text="Iced Coconut Coffee"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp"
                    app:layout_constraintTop_toBottomOf="@id/image6"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />

                <!-- Rating and Time -->
                <TextView
                    android:id="@+id/ratingTime6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:text="⭐ 4.1    5-6 mins"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp"
                    app:layout_constraintTop_toBottomOf="@id/name6"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />

            </android.support.constraint.ConstraintLayout>
        </LinearLayout>
    </LinearLayout>
</ScrollView>

</FrameLayout>