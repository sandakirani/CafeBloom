<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CokeActivity"
    android:background="@color/black">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/page"
        app:layout_constraintBottom_toTopOf="@+id/bottomNavigationView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </FrameLayout>
    <android.support.design.widget.BottomNavigationView
        android:id="@+id/bottomNavigationView"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:paddingBottom="10dp"
        android:background="@color/ash"
        app:itemIconSize="35dp"
        app:itemBackground="@drawable/bottom_nav_item_background"
        app:itemIconTint="@color/bottom_nav_icon_colors"
        app:itemTextColor="@color/bottom_nav_icon_colors"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:menu="@menu/bottom_menu" />
    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/lily_script_one"
        android:gravity="center"
        android:text="Cafe"
        android:textColor="@color/brown_shade"
        android:textSize="40sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.048"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.005" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/caladea"
        android:text="Bloom"
        android:textColor="@color/brown_shade"
        android:textSize="40sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.328"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />
    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/caladea"
        android:text="Savor the flavour of sip"
        android:textColor="@color/white"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.09"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3"
        app:layout_constraintVertical_bias="0.004" />

    <ImageButton
        android:id="@+id/back"
        android:layout_width="24dp"
        android:layout_height="20dp"
        android:layout_marginTop="1dp"
        android:background="@android:color/transparent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.927"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.021"
        android:src="?attr/actionModeCloseDrawable"
        android:tint="@android:color/white"
        android:onClick="goBack" />

    <!-- Horizontal Scroll View for Buttons -->
    <android.widget.HorizontalScrollView
        android:id="@+id/horizontalScrollView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="120dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <!-- Horizontal LinearLayout to hold buttons -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="15dp"
            android:layout_marginLeft="6dp">

            <!-- Define 7 Buttons -->
            <Button
                android:id="@+id/coke"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:fontFamily="@font/caladea"
                android:text="Coke Items"
                android:textColor = "@color/white"
                android:background="@drawable/select_button"
                android:onClick="cokepage"/>

            <Button
                android:id="@+id/hot_drinks"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:fontFamily="@font/caladea"
                android:text="Hot Drinks"
                android:textColor = "@color/white"
                android:background="@drawable/button_background"
                android:onClick="hotdrinkspage"/>
            <Button
                android:id="@+id/shake"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:fontFamily="@font/caladea"
                android:text="Shakes"
                android:textColor = "@color/white"
                android:background="@drawable/button_background"
                android:onClick="shakepage"/>


            <Button
                android:id="@+id/iced_coffee"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:fontFamily="@font/caladea"
                android:text="Iced Coffee"
                android:textColor = "@color/white"
                android:background="@drawable/button_background"
                android:onClick="icedcoffeepage"/>


            <Button
                android:id="@+id/breakfast"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:fontFamily="@font/caladea"
                android:text="Breakfast"
                android:textColor = "@color/white"
                android:background="@drawable/button_background"
                android:onClick="breakfastpage"/>

            <Button
                android:id="@+id/brewing_coffee"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:fontFamily="@font/caladea"
                android:text="Brewing Coffee"
                android:textColor = "@color/white"
                android:background="@drawable/button_background"
                android:onClick="brewingcoffeepage"/>

        </LinearLayout>
    </android.widget.HorizontalScrollView>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/horizontalScrollView"
        android:layout_marginTop="180dp"
        android:padding="30dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:showDividers="middle"
                android:dividerPadding="16dp">

                <android.support.constraint.ConstraintLayout
                    android:id="@+id/firstproduct"
                    android:layout_width="160dp"
                    android:layout_height="230dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginEnd="30dp"
                    android:background="@drawable/round_square"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.083"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/horizontalScrollView"
                    app:layout_constraintVertical_bias="0.072">


                    <ImageView
                        android:id="@+id/image1"
                        android:layout_width="149dp"
                        android:layout_height="147dp"
                        android:layout_marginTop="5dp"
                        android:adjustViewBounds="true"
                        android:background="@drawable/image_border"
                        android:clipToOutline="true"
                        android:scaleType="centerCrop"
                        android:src="@drawable/classic_iced_coke"
                        app:layout_constraintBottom_toTopOf="@+id/name1"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.545"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/name1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/caladea"
                        android:gravity="center"
                        android:text="Classic Iced Coke"
                        android:textColor="#FFFFFF"
                        android:textSize="16sp"
                        app:layout_constraintTop_toBottomOf="@id/image1"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent" />

                    <!-- Rating and Time -->
                    <TextView
                        android:id="@+id/ratingTime1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="⭐ 4.5    2 mins"
                        android:textColor="#FFFFFF"
                        android:textSize="14sp"
                        app:layout_constraintTop_toBottomOf="@id/name1"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent" />

                </android.support.constraint.ConstraintLayout>

                <android.support.constraint.ConstraintLayout
                    android:id="@+id/secondproduct"
                    android:layout_width="160dp"
                    android:layout_height="230dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/round_square"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.943"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/horizontalScrollView"
                    app:layout_constraintVertical_bias="0.073">

                    <!-- Updated ImageView -->
                    <ImageView
                        android:id="@+id/image2"
                        android:layout_width="149dp"
                        android:layout_height="147dp"
                        android:layout_marginTop="5dp"
                        android:adjustViewBounds="true"
                        android:background="@drawable/image_border"
                        android:scaleType="centerCrop"
                        android:clipToOutline="true"
                        android:src="@drawable/coke_float"
                        app:layout_constraintBottom_toTopOf="@+id/name2"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <!-- Product Name -->
                    <TextView
                        android:id="@+id/name2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/caladea"
                        android:gravity="center"
                        android:text="Coke Float"
                        android:textColor="#FFFFFF"
                        android:textSize="16sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/image2" />


                    <!-- Rating and Time -->
                    <TextView
                        android:id="@+id/ratingTime2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="⭐ 4.5    3-4 mins"
                        android:textColor="#FFFFFF"
                        android:textSize="14sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/name2" />

                </android.support.constraint.ConstraintLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:showDividers="middle"
                android:dividerPadding="16dp">
                <android.support.constraint.ConstraintLayout
                    android:id="@+id/thirdproduct"
                    android:layout_width="160dp"
                    android:layout_height="230dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="30dp"
                    android:background="@drawable/round_square"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.083"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/firstproduct"
                    app:layout_constraintVertical_bias="0.072">

                    <!-- Updated ImageView -->

                    <!-- Product Name -->
                    <ImageView
                        android:id="@+id/image3"
                        android:layout_width="149dp"
                        android:layout_height="147dp"
                        android:layout_marginTop="5dp"
                        android:adjustViewBounds="true"
                        android:background="@drawable/image_border"
                        android:clipToOutline="true"
                        android:scaleType="centerCrop"
                        android:src="@drawable/spiced_coke"
                        app:layout_constraintBottom_toTopOf="@+id/name3"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.545"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/name3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/caladea"
                        android:gravity="center"
                        android:text="Spiced Coke"
                        android:textColor="#FFFFFF"
                        android:textSize="16sp"
                        app:layout_constraintTop_toBottomOf="@id/image3"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent" />


                    <!-- Rating and Time -->
                    <TextView
                        android:id="@+id/ratingTime3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="⭐ 4.7    3-4 mins"
                        android:textColor="#FFFFFF"
                        android:textSize="14sp"
                        app:layout_constraintTop_toBottomOf="@id/name3"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent" />

                </android.support.constraint.ConstraintLayout>

                <android.support.constraint.ConstraintLayout
                    android:id="@+id/fourthproduct"
                    android:layout_width="160dp"
                    android:layout_height="230dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/round_square"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.943"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/secondproduct"
                    app:layout_constraintVertical_bias="0.073">

                    <!-- Updated ImageView -->
                    <ImageView
                        android:id="@+id/image4"
                        android:layout_width="149dp"
                        android:layout_height="147dp"
                        android:layout_marginTop="5dp"
                        android:adjustViewBounds="true"
                        android:background="@drawable/image_border"
                        android:scaleType="centerCrop"
                        android:clipToOutline="true"
                        android:src="@drawable/lemon_mint_coke_cooler"
                        app:layout_constraintBottom_toTopOf="@+id/name4"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <!-- Product Name -->
                    <TextView
                        android:id="@+id/name4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/caladea"
                        android:gravity="center"
                        android:text="Lemon-Mint Coke Cooler"
                        android:textColor="#FFFFFF"
                        android:textSize="16sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/image4" />


                    <!-- Rating and Time -->
                    <TextView
                        android:id="@+id/ratingTime4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="⭐ 4.9    4-5 mins"
                        android:textColor="#FFFFFF"
                        android:textSize="14sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/name4" />

                </android.support.constraint.ConstraintLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:showDividers="middle"
                android:dividerPadding="16dp">
                <android.support.constraint.ConstraintLayout
                    android:id="@+id/fifthproduct"
                    android:layout_width="160dp"
                    android:layout_height="230dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="30dp"
                    android:background="@drawable/round_square"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.083"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/thirdproduct"
                    app:layout_constraintVertical_bias="0.072">

                    <!-- Updated ImageView -->
                    <ImageView
                        android:id="@+id/image5"
                        android:layout_width="149dp"
                        android:layout_height="147dp"
                        android:layout_marginTop="5dp"
                        android:src="@drawable/cherry_coke_delight"
                        android:scaleType="centerCrop"
                        android:clipToOutline="true"
                        android:adjustViewBounds="true"
                        android:background="@drawable/image_border"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toTopOf="@+id/name5"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent" />

                    <!-- Product Name -->
                    <TextView
                        android:id="@+id/name5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/caladea"
                        android:gravity="center"
                        android:text="Cherry Coke Delight"
                        android:textColor="#FFFFFF"
                        android:textSize="16sp"
                        app:layout_constraintTop_toBottomOf="@id/image5"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent" />


                    <!-- Rating and Time -->
                    <TextView
                        android:id="@+id/ratingTime5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="⭐ 4.9    4-5 mins"
                        android:textColor="#FFFFFF"
                        android:textSize="14sp"
                        app:layout_constraintTop_toBottomOf="@id/name5"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent" />

                </android.support.constraint.ConstraintLayout>

                <android.support.constraint.ConstraintLayout
                    android:id="@+id/sixthproduct"
                    android:layout_width="160dp"
                    android:layout_height="230dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/round_square"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.943"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/fourthproduct"
                    app:layout_constraintVertical_bias="0.073">

                    <!-- Updated ImageView -->
                    <ImageView
                        android:id="@+id/image6"
                        android:layout_width="149dp"
                        android:layout_height="147dp"
                        android:layout_marginTop="5dp"
                        android:adjustViewBounds="true"
                        android:background="@drawable/image_border"
                        android:scaleType="centerCrop"
                        android:clipToOutline="true"
                        android:src="@drawable/vanilla_coke_splash"
                        app:layout_constraintBottom_toTopOf="@+id/name6"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <!-- Product Name -->
                    <TextView
                        android:id="@+id/name6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/caladea"
                        android:gravity="center"
                        android:text="Vanilla Coke Splash"
                        android:textColor="#FFFFFF"
                        android:textSize="16sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/image6" />


                    <!-- Rating and Time -->
                    <TextView
                        android:id="@+id/ratingTime6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="⭐ 4.8    3-4 mins"
                        android:textColor="#FFFFFF"
                        android:textSize="14sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/name6" />

                </android.support.constraint.ConstraintLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:showDividers="middle"
                android:dividerPadding="16dp">
                <android.support.constraint.ConstraintLayout
                    android:id="@+id/seventhproduct"
                    android:layout_width="160dp"
                    android:layout_height="230dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="30dp"
                    android:background="@drawable/round_square"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.083"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/thirdproduct"
                    app:layout_constraintVertical_bias="0.072">

                    <!-- Updated ImageView -->
                    <ImageView
                        android:id="@+id/image7"
                        android:layout_width="149dp"
                        android:layout_height="147dp"
                        android:layout_marginTop="5dp"
                        android:src="@drawable/tropical_coke_punch"
                        android:scaleType="centerCrop"
                        android:clipToOutline="true"
                        android:adjustViewBounds="true"
                        android:background="@drawable/image_border"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toTopOf="@+id/name7"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent" />

                    <!-- Product Name -->
                    <TextView
                        android:id="@+id/name7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/caladea"
                        android:gravity="center"
                        android:text="Tropical Coke Punch"
                        android:textColor="#FFFFFF"
                        android:textSize="16sp"
                        app:layout_constraintTop_toBottomOf="@id/image7"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent" />

                    <!-- Rating and Time -->
                    <TextView
                        android:id="@+id/ratingTime7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="⭐ 4.9    5-6 mins"
                        android:textColor="#FFFFFF"
                        android:textSize="14sp"
                        app:layout_constraintTop_toBottomOf="@id/name7"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent" />

                </android.support.constraint.ConstraintLayout>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>