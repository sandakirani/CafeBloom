<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".MenuActivity"
    android:background="@color/page" >

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/lily_script_one"
        android:gravity="center"
        android:text="Cafe"
        android:textColor="@color/brown_shade"
        android:textSize="40sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.048"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.005" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/caladea"
        android:text="Bloom"
        android:textColor="@color/brown_shade"
        android:textSize="40sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.328"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/caladea"
        android:text="Savor the flavour of sip"
        android:textColor="@color/white"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.09"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3"
        app:layout_constraintVertical_bias="0.004" />


    <!-- Horizontal Scroll View for Buttons -->
    <android.widget.HorizontalScrollView
        android:id="@+id/horizontalScrollView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="120dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <!-- Horizontal LinearLayout to hold buttons -->
        <LinearLayout
            android:id="@+id/listbutton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="15dp"
            android:layout_marginLeft="6dp"
            android:layout_marginBottom="5dp">

            <!-- Define 7 Buttons -->
            <Button
                android:id="@+id/shake"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:fontFamily="@font/caladea"
                android:text="Shakes"
                android:textColor = "@color/white"
                android:background="@drawable/button_background"
                android:onClick="shakepage"/>

            <Button
                android:id="@+id/iced_coffee"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:background="@drawable/button_background"
                android:fontFamily="@font/caladea"
                android:onClick="icedcoffeepage"
                android:text="Iced Coffee"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/hot_drinks"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:background="@drawable/button_background"
                android:fontFamily="@font/caladea"
                android:onClick="hotdrinkspage"
                android:text="Hot Drinks"
                android:textColor="@color/white" />


            <Button
                android:id="@+id/coke"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:fontFamily="@font/caladea"
                android:text="Coke Items"
                android:textColor = "@color/white"
                android:background="@drawable/button_background"
                android:onClick="cokepage"/>

            <Button
                android:id="@+id/brewing_coffee"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:fontFamily="@font/caladea"
                android:text="Brewing Coffee"
                android:textColor = "@color/white"
                android:background="@drawable/button_background"
                android:onClick="brewingcoffeepage"/>

            <Button
                android:id="@+id/breakfast"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:background="@drawable/button_background"
                android:fontFamily="@font/caladea"
                android:onClick="breakfastpage"
                android:text="Breakfast"
                android:textColor="@color/white" />

        </LinearLayout>
    </android.widget.HorizontalScrollView>

</android.support.constraint.ConstraintLayout>