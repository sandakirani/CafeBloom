<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1C1C1C"
    tools:context=".Classiciced1">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/horizontalScrollView">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="200dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="196dp"
                    android:adjustViewBounds="true"

                    android:alpha="0.5"
                    android:background="@drawable/image_background_border"
                    android:clipToOutline="true"
                    android:scaleType="centerCrop"
                    android:src="@drawable/classiciced" />

                <TextView
                    android:id="@+id/tvTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="106dp"
                    android:fontFamily="@font/lily_script_one"
                    android:text="Classic iced americano"
                    android:textColor="#FFFFFF"
                    android:textSize="30sp" />

                <TextView
                    android:id="@+id/tvDescription"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:layout_below="@id/tvTitle"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="1dp"
                    android:layout_marginBottom="2dp"
                    android:fontFamily="@font/caladea"
                    android:text="Refresh yourself with the bold, invigorating taste of our Classic Iced Americano, a perfect blend of rich espresso and chilled water"
                    android:textColor="@color/white"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <ImageButton
                    android:id="@+id/back"
                    android:layout_width="24dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:background="@android:color/transparent"
                    android:onClick="goBack"
                    android:src="?attr/actionModeCloseDrawable"
                    android:tint="@android:color/white"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.927"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.021" />


            </RelativeLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:text="⭐ 4.5"
                    android:textColor="#FFFFFF" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="  4-5 mins"
                    android:textColor="#CCCCCC" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btnMinus"
                    android:layout_width="145dp"
                    android:layout_height="40dp"
                    android:text="-"
                    android:textColor="@color/white"
                    android:background="@drawable/button_select"
                    android:textSize="35sp" />

                <TextView
                    android:id="@+id/tvQuantity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="16dp"
                    android:text="1"
                    android:textColor="#FFFFFF"
                    android:textSize="25sp" />

                <Button
                    android:id="@+id/btnPlus"
                    android:layout_width="145dp"
                    android:layout_height="40dp"
                    android:text="+"
                    android:textColor="@color/white"
                    android:background="@drawable/button_select"
                    android:textSize="30sp" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Size"
                android:textSize="20sp"
                android:textColor="@color/white"
                android:fontFamily="@font/gotu"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btnSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Small"
                    android:layout_marginEnd="13dp"
                    android:fontFamily="@font/caladea"
                    android:textColor="@color/white"
                    android:textSize="17sp"
                    android:background="@drawable/button_select"/>

                <Button
                    android:id="@+id/btnMedium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/caladea"
                    android:layout_marginEnd="13dp"
                    android:text="Medium"
                    android:textSize="17sp"
                    android:textColor="@color/white"
                    android:background="@drawable/button_select"/>

                <Button
                    android:id="@+id/btnLarge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Large"
                    android:textSize="17sp"
                    android:fontFamily="@font/caladea"
                    android:textColor="@color/white"
                    android:background="@drawable/button_select"/>
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Type of Chocolate"
                android:textSize="20sp"
                android:textColor="@color/white"
                android:fontFamily="@font/gotu"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btnDark"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Dark"
                    android:layout_marginEnd="13dp"
                    android:fontFamily="@font/caladea"
                    android:textColor="@color/white"
                    android:textSize="17sp"
                    android:background="@drawable/button_select"/>

                <Button
                    android:id="@+id/btnMilk"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginEnd="13dp"
                    android:text="Milk"
                    android:textSize="17sp"
                    android:fontFamily="@font/caladea"
                    android:textColor="@color/white"
                    android:background="@drawable/button_select"/>

                <Button
                    android:id="@+id/btnWhite"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="White"
                    android:textSize="17sp"
                    android:fontFamily="@font/caladea"
                    android:textColor="@color/white"
                    android:background="@drawable/button_select"/>
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Toppings"
                android:textSize="20sp"
                android:textColor="@color/white"
                android:fontFamily="@font/gotu"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btnWhippedCream"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Whipped Cream"
                    android:layout_marginEnd="13dp"
                    android:fontFamily="@font/caladea"
                    android:textColor="@color/white"
                    android:textSize="17sp"
                    android:background="@drawable/button_select"/>

                <Button
                    android:id="@+id/btnMarshMalllows"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="17sp"
                    android:text="Marshmallows"
                    android:fontFamily="@font/caladea"
                    android:textColor="@color/white"
                    android:background="@drawable/button_select"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="16dp">
                <TextView
                    android:id="@+id/select"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#964B00"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:text="SELECTED ITEMS:"/>
                <TextView
                    android:id="@+id/tvSelectedItems"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#FFFFFF"
                    android:textStyle="italic"
                    android:textSize="18sp"
                    android:text=""/>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TOTAL PRICE:      "
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="#964B00"
                    />


                <TextView
                    android:id="@+id/tvTotalPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rs.0"
                    android:textStyle="bold"
                    android:textColor="#FFFF00"
                    android:textSize="25sp" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btnBuyNow"
                    android:layout_width="138dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/button_select1"
                    android:text="BUY NOW"
                    android:layout_marginRight="50dp"
                    android:textColor="@color/white"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/btnAddToCart"
                    android:layout_width="138dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/button_select1"
                    android:text="ADD TO CART"
                    android:textColor="@color/white"
                    android:textStyle="bold" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</android.support.constraint.ConstraintLayout>
